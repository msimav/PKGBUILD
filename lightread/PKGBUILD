# Maintainer: msimav
# Copied directly from nitrotasks, thanks to Ner0

pkgname=lightread
pkgver=1.0.9
pkgrel=1
pkgdesc="a totally awesome offline Google Reader."
arch=('any')
url="https://launchpad.net/lightread"
license=('Simplified BSD Licence')
depends=('pygtk' 'python2' 'python2-gobject' 'pywebkitgtk' 'libdbusmenu' 'python-notify' 'libwebkit3')
makedepends=('python2-distutils-extra')
install=$pkgname.install
source=("https://launchpad.net/${pkgname}/trunk/${pkgver}/+download/${pkgname}_${pkgver}.tar.gz")
md5sums=('7971dd5806ebd7dab55acbd66bcceeae')

package() {
  cd lightread

  # Remove unity support
  sed -i 's/Unity,\ //' lightread/LightreadWindow.py
  sed -i 's/launcher.*/pass/' lightread/LightreadWindow.py

  python2 setup.py install --root="$pkgdir/" --optimize=1

  find "$pkgdir/" -type f -not -name lightread -exec chmod 644 '{}' \;
}
